<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {% block title %}
        タイトル
      {% endblock title %}
    </title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <link rel="icon" href="images/favicon.png" type="image/png">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
  <header class="header container">
    {% block header %}ヘッダー{% endblock header %}
  </header>
  <nav class="nav container">
    {% block nav %}
      <ul>
        <li>
          <a href="{{ url_for('index') }}">トップ</a>
        </li>
        <li>
          <a href="{{ url_for('item_list') }}">商品一覧</a>
        </li>
        <li>
          <a href="{{ url_for('item_detail') }}">商品詳細</a>
        </li>
        <li>
          <a href="{{ url_for('dynamic_default', value='hello') }}"
            >コンバーターなし</a
          >
        </li>
        <li>
          <a href="{{ url_for('dynamic_int', number=100) }}"
            >コンバーターあり</a
          >
        </li>
        <li>
          <a
            href="{{ url_for('dynamic_converter_multiple', value='hello', number=100) }}"
            >コンバーターあり複数値渡し</a
          >
        </li>
        <li>
          <a href="{{ url_for('show_form') }}">入力フォーム</a>
        </li>
      </ul>
    {% endblock nav %}
    </nav>
    <main class="main container">
    {% block content %}内容{% endblock content %}
    </main>
    <footer class="footer container">
    {% block footer %}<ul>
      {% block footer_top %}
        <li>
          <a href="{{ url_for('index') }}">トップ</a>
        </li>
      {% endblock footer_top %}
    </ul>{% endblock footer %}
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
